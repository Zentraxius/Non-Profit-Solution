@{
  Layout = "_Layout";
}

@using NonProfit.Models;
@model List<NonProfit.Models.Donation>;

<h1>Donations</h1>

@if (@Model.Count == 0)
{
  <h3>No donations have been added yet! Get out there and fundraise!</h3>
} 

@foreach (Donation donation in Model)
{
  <li>@Html.ActionLink($"{donation.Money}", "Details", new { id = donation.DonationId }) | @donation.Donor.Name</li>
}

<p>@Html.ActionLink("Add new donation", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>