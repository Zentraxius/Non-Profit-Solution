@using NonProfit.Models;

<h1>Donors</h1>

@if (@Model.Count == 0)
{
  <h3>No donors have been added yet!</h3>
} 

@foreach (Donor donor in Model)
{
  <h3>@Html.ActionLink($"{donor.Name}", "Details", new { id = donor.DonorId })</h3>
}



<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Add new donor", "Create")</p>