} 

@foreach (Donor donor in Model)
{
  <h3><a href='/categories/@Donors.DonorsId'>@donor.Name</a></h3>
}

<p><a href='/'>Back home</a></p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>